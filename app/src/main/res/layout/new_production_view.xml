<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewProductionKey"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <io.github.iurimenin.easyprod.app.util.MoneyMaskMaterialEditText
        android:id="@+id/materialEditTextProductionBags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/bags"
        android:inputType="numberDecimal"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"
        app:met_baseColor="@color/colorPrimary"
        app:met_primaryColor="@color/colorPrimaryLight"
        app:met_helperTextAlwaysShown="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>