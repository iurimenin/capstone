<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutActivityField"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.view.FarmActivity">

    <TextView
        android:id="@+id/textViewFarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fields_farm_two_dots"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/textViewFarmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/farm_name"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFarm" />

    <com.malinskiy.superrecyclerview.SuperRecyclerView
        android:id="@+id/superRecyclerViewFields"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:scrollbarStyle="insideInset"
        tools:layout_editor_absoluteY="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewFarmName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonAddField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/button_add_field"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
